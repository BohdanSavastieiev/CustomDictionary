@page
@model DictionaryApplication.Pages.UserDictionarySelector.UserDictionaryView.DeleteModel

@{
    ViewData["Title"] = "Delete Lexeme";
}

<h1>Are you sure you want to delete this lexeme?</h1>

<div class="container">

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Studied Lexeme (@Model.UserDictionary.StudiedLanguage.LangCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LexemeInput.Lexeme)
            </dd>
            <dt class="col-sm-2">
                Translations (@Model.UserDictionary.TranslationLanguage.LangCode)
            </dt>
            <dd class="col-sm-10">
                <ul>
                    @for (int i = 0; i < Model.LexemeInput.LexemeInformations.Count; i++)
                    {
                        <li>
                            @Html.DisplayFor(model => model.LexemeInput.LexemeInformations[i].Translation)
                        </li>
                    }
                </ul>
            </dd>
        </dl>

        <form method="post" style="text-align: center">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index" asp-route-userDictionaryId="@Model.UserDictionary.Id" asp-route-pageId="@Model.CurrentPage">Back to List</a>
        </form>
    </div>
</div>

