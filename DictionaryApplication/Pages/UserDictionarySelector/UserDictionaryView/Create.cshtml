@page
@model DictionaryApplication.Pages.UserDictionarySelector.UserDictionaryView.CreateModel

@{
    ViewData["Title"] = "Add Lexeme";
}

<h1>Create Lexeme</h1>

<form method="post">
    <div class="form-group text-center">
        <input asp-for="Lexeme" class="form-control small-input text-center" />
        <span asp-validation-for="Lexeme" class="text-danger"></span>
    </div>
    <div class="form-group text-center">
        <input type="submit" value="Submit" class="big-btn" disabled="@(!Model.IsLexemeValid)" />
    </div>
</form>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const lexemeInput = document.querySelector('input[name="Lexeme"]');
            const submitButton = document.querySelector('input[type="submit"]');

            function checkLexemeValidity() {
                submitButton.disabled = !lexemeInput.value;
            }

            lexemeInput.addEventListener('input', checkLexemeValidity);
            checkLexemeValidity();  // Initial check
        });
    </script>
}
